<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>Task List</h1>
      <ul class="list-group">
        <% tasks.forEach((task) => { %>
        <li
          class="list-group-item 
          <% if (task.completed) { %>bg-success text-white<% } else { %>bg-danger text-white<% } %>">
          <a href="/task/<%= task._id %>" class="text-white fw-bold text-decoration-none">
            <%= task.title %>
          </a>
        </li>
        <% }); %>
      </ul>
      <div class="mt-4">
        <a href="/create" class="btn btn-primary">Create Task</a>
      </div>
    </div>
  </body>
</html>
